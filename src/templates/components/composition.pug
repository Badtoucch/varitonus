		.composition-content
			.composition-item-box.composition-item-box-left
				.composition-item
					.composition-item__img
						img(src='img/composition-1.png' alt='composition')
						span.composition-line.composition-line-first
					.composition-item-info
						h4.composition-item__title Экстракт виноградных листьев
						p.composition-item__text Снижает проницаемость
							br
							| сосудов
				.composition-item
					.composition-item__img
						img(src='img/composition-3.png' alt='composition')
						span.composition-line.composition-line-second
					.composition-item-info
						h4.composition-item__title Корень кукольника
						p.composition-item__text Дезодорируют и снижают
							br
							| потливость
			.composition-pack
				img.composition-pack__quality-img(src='img/quality_.png' alt='quality')
